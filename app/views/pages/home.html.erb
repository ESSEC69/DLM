<div class="banner" style="background-image: url(<%= image_url 'Homepage.jpg' %>);">
  <div class="banner-logo">
  <%= image_tag "DLM_LOGO.png" %>
  </div>
  <div class="btn-login">
    LOG
  </div>
  <div class="banner-content">
    <h1>LE <span style="color:#00ffff">CYCLISME</span>  A LA SAUCE</h1> <h1>KETCHUP-MAYO<span style="color:#ffff00"> JAUNE</span>. </h1>
  </div>
</div>

<div class="bandeau navbar-fixed-top text-center">
      <%= link_to root_path do %>
        <%= image_tag "DLM_LOGO_small.png" %>
      <% end %>
</div>


<div class="presentation">
  <div class="container">
    <div class="wrapper-media">
      <div class="row text-center">
        <h1 style ="color: #00ffff"> <strong> DERNIERS ARTICLES </strong></h1>
        <h4>Lisez nos derniers articles, ils sont très cool.</h4>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="wrapper-article">
      <div class="row">
        <% @posts1.each do |post| %>
          <div class="col-md-4">
          <div class="case">
            <%= link_to post_path(post) do %>
                <div class="card">
                  <div class="bg" style="background-image: url(<%="http://res.cloudinary.com/dni1kt5ya/image/upload/#{post.vignette.filename.to_s}"%>); ">
                  </div>
                  <div class="bg2">
                      <div class="cta text-center">
                      <h1 class="text-center"><%= post.numerotation %>.</h1>
                      <p class="text-center"><%= post.title %></p>
                      </div>
                      <div class="go text-center">
                        GO
                      </div>
                  </div>
                </div>
            <%end%>
          </div>
          </div>
        <%end%>
      </div>
      <div class="row">
        <% if !@posts2.nil? %>
          <% @posts2.each do |post| %>
            <div class="col-md-4">
            <div class="case">
              <%= link_to post_path(post) do %>
                  <div class="card">
                    <div class="bg" style="background-image: url(<%="http://res.cloudinary.com/dni1kt5ya/image/upload/#{post.vignette.filename.to_s}"%>); ">
                    </div>
                    <div class="bg2">
                        <div class="cta text-center">
                        <h1 class="text-center"><%= post.numerotation %>.</h1>
                        <p class="text-center"><%= post.title %></p>
                        </div>
                        <div class="go text-center">
                          GO
                        </div>
                    </div>
                  </div>
              <%end%>
            </div>
            </div>
          <%end%>
        <%end%>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <%= link_to posts_path do %>
  <div class="row text-center go" style=" margin-bottom:20px; ">

          <h4>ET BEAUCOUP D'AUTRES</h4>
  </div>
  <%end%>
</div>





<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {

      $(".bandeau").hide(); //hide your div initially
          var topOfOthDiv = $(".presentation").offset().top;
          $(window).scroll(function() {
              if($(window).scrollTop() > topOfOthDiv) {
                  console.log("hello");
                  $(".bandeau").show();
              }

              if($(window).scrollTop() < topOfOthDiv) {
                  console.log(topOfOthDiv);
                  console.log($(window).scrollTop());
                  console.log("oups");
                  $(".bandeau").hide();
              }

          });

    });
  <% end %>
<% end %>


